{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true, // For output file with extension .d.ts
    "outDir": "./dist",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
